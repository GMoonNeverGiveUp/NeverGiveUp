{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "api.ts",
    "src/**/*",
    "__tests__/**/*",
  ]
}
