{
  "compilerOptions": {
    "composite": true,
    "type": "module",
    "types": ["vitest/globals"],
    "rootDir": "src",
    "outDir": "../dist/scripts",
    "tsBuildInfoFile": "../dist/scripts/tsconfig.scripts.tsbuildinfo",
    "module": "Node16",
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["../src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "src/index.ts"],
  "exclude": ["node_modules", "../node_modules", "dist"],
  "files": [],
  "references": [
    { "path": "./scripts" },
    { "path": "./server" },
    { "path": "./src" }
  ]
}
