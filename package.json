{
  "name": "galactic-genius-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "workspaces": [
    "src",
    "server",
    "scripts"
  ],
  "scripts": {
    "bootstrap": "pnpm install",
    "clean": "rimraf dist \"**/*.tsbuildinfo\"",
    "tsc:build": "tsc --build tsconfig.build.json",
    "build": "pnpm run tsc:build && pnpm -r run build",
    "build:web": "pnpm --filter galactic-genius-src run build",
    "build:api": "pnpm --filter server run build",
    "build:scripts": "pnpm --filter scripts run build",
    "lint": "pnpm -r run lint",
    "test:unit": "vitest run --coverage",
    "lint:fix": "pnpm -r run lint:fix",
    "typecheck": "pnpm run tsc:build",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter galactic-genius-src run dev",
    "dev:api": "pnpm --filter server run dev",
    "test:unit:html": "pnpm -r run test:unit:html",
    "test:unit:watch": "vitest --watch",
    "pretest:e2e": "playwright install --with-deps",
    "test:e2e": "pnpm run pretest:e2e && start-server-and-test \"pnpm run dev:web\" http://localhost:3000 \"pnpm exec playwright test --project=chromium,firefox,webkit,edge\"",
    "test:e2e:ui": "pnpm run pretest:e2e && start-server-and-test \"pnpm run dev:web\" http://localhost:3000 \"pnpm exec playwright test --headed --project=chromium,edge\"",
    "coverage": "pnpm -r run coverage",
    "coverage:html": "pnpm -r run coverage:html",
    "coverage:upload": "node scripts/upload-coveralls.mjs",
    "check": "pnpm run clean && pnpm run lint && pnpm run typecheck && pnpm run test:unit",
    "check:all": "pnpm run check && pnpm run test:e2e"
  },
  "dependencies": {
    "astro": "^5.10.0",
    "glob": "^10.4.5",
    "vite": "^5.4.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.1",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "3.2.4",
    "astro-eslint-parser": "^1.2.2",
    "bluebird": "^2.9.21",
    "chalk": "^1.0.0",
    "codecov": "^4.0.0-0",
    "commander": "^2.7.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "is-my-json-valid": "^2.20.6",
    "playwright": "^1.53.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.0",
    "start-server-and-test": "^2.0.12",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.4.5",
      "inflight": "npm:@esbuild/dummy-pkg",
      "har-validator-fsless": "1.6.6",
      "tough-cookie": "6.0.0-rc.0",
      "esbuild": "0.25.0",
      "uuid": "11.1.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
