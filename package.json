{
  "name": "galactic-genius-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "workspaces": [
    "src",
    "server",
    "scripts"
  ],
  "scripts": {
  "bootstrap": "pnpm install --recursive",
  "clean": "rimraf dist \"**/*.tsbuildinfo\"",
  "build": "tsc -b",
  "lint": "eslint . --ext .ts,.tsx,.mts,.cts,.js,.jsx,.astro",
  "lint:fix": "eslint . --ext .ts,.tsx,.mts,.cts,.js,.jsx,.astro --fix",
  "typecheck": "turbo run typecheck",
  "dev": "turbo run dev --parallel",

  "test:unit": "vitest run --coverage.enabled true --coverage.reporter=text",
  "test:unit:html": "vitest run --coverage.enabled true --coverage.reporter=html",
  "test:unit:watch": "vitest watch",

  "pretest:e2e": "playwright install --with-deps",
  "test:e2e": "playwright test",
  "test:e2e:ui": "playwright test --headed --project=chromium",

  "coverage": "vitest run --coverage",
  "check": "turbo run lint test:unit typecheck",
  "tsc:check": "tsc -b --verbose",
  "tsc:watch": "tsc -b --watch"
  },
  "dependencies": {
    "astro": "^5.10.0",
    "glob": "^10.4.5",
    "vite": "^5.4.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "playwright": "^1.53.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.0",
    "start-server-and-test": "^2.0.12",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.4.5",
      "inflight": "npm:@esbuild/dummy-pkg"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
