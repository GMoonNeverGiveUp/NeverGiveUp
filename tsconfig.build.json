// tsconfig.build.json
{
  "extends": "./tsconfig.base.json",
  "files": [],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/root.tsbuildinfo",
    "noEmit": true
  },
  "references": [
    { "path": "./src" },
    { "path": "./server" },
    { "path": "./scripts" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test-d.ts",
    "src/**/*",
    "server/**/*",
    "scripts/**/*"
  ]
}
