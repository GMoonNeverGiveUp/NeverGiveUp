// tsconfig.base.json (at /workspaces/galactic-genius/)
{
  "compilerOptions": {
    "target": "ES2021",                 // private fields ok
    "module": "ESNext",
    "moduleResolution": "Node16",       // fixes rollup/parseAst import
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",                     // so paths work
    "paths": {
      "@src/*":   ["src/*"],
      "@server/*":["server/*"],
      "@scripts/*":["scripts/src/*"]
    }
  }
}
